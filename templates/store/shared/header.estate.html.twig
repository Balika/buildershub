<!-- HEADER -->
<header class="site-header header-opt-1">
    {% if category is not defined %}
        {% set category = null %}   
    {% endif %}
    <!-- header-top -->
    <div class="header-top">
          {{ render_esi(controller('App\\Controller\\StoreUtilityController:renderTopHeader'), {"default":'Loading Cart....'}) }}                                       
    </div> <!-- header-top -->
    <!-- header-content -->
    <div class="header-content">
        <div class="container">
            <div class="row">
                <div class="col-md-2 nav-left">
                    <!-- logo -->
                    <strong class="logo">
                        <a href="{{path('store_index')}}"><img src="{{asset('hub-logo.png')}}" alt="logo"></a>
                    </strong><!-- logo -->
                </div>
                <div class="col-md-8 nav-mind">
                    <!-- block search -->
                    <div class="block-search">
                        {{ render(controller('App\\Controller\\EstateUtilityController:renderMidHeader', {'block':'midHeader'} ), {"default":'Loading Cart....'}) }}                                                                                                             
                    </div><!-- block search -->
                </div>
                <div class="col-md-2 nav-right">
                   {# include 'store/includes/header.cart.html.twig' #}
                   <a class="btn btn-action btn-success btn-lg" href="{{path('register_store', {'type':'property'})}}" target="_blank"><i class="fa fa-bullseye"></i> Advertise Property</a>
                </div>
            </div>
        </div>
    </div><!-- header-content -->
    <!-- header-menu-bar -->
    <div class="header-menu-bar header-sticky">
        <div class="header-menu-nav menu-style-2">
            <div class="container">
                <div class="header-menu-nav-inner">
                     <div id="box-vertical-megamenus" class="box-vertical-megamenus nav-toggle-cat">
                        {{ render_esi(controller('App\\Controller\\EstateUtilityController:renderEstateMainMenu'), {"default":'Loading Cart....'}) }}                          
                    </div>
                </div>
            </div>
        </div>
    </div>
</header><!-- end HEADER -->     
