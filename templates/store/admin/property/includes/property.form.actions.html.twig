<div class="box box-default box-solid">
    <div class="box-header with-border">
        <h4 class="box-title">Publish</h4>
        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
        </div><!-- /.box-tools -->
    </div><!-- /.box-header -->

    <div class="box-body">
        {{form_widget(form.isFeatured, { 'attr': {class: 'flat-red',   } })}}  Is Featured
    </div><!-- /.box-body -->
    <div class="box-footer">  
        <div class="pull-left">
            {{roperty is not defined  ? form_widget(form.saveAsDraft, { 'attr': {class: 'btn btn-default',   } })}}
        </div>
        <div class=" pull-right">
            {{property is defined and property.id > 0 ? form_widget(form.updateProperty, { 'attr': {class: 'btn btn-primary'} }) : 
         form_widget(form.publishProperty, { 'attr': {class: 'btn btn-primary'   } })}}   
        </div>
    </div>
</div><!-- /.box -->
