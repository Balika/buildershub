<div class="box box-default box-solid">
    <div class="box-header with-border">
        <h4 class="box-title">Publish</h4>
        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
        </div><!-- /.box-tools -->
    </div><!-- /.box-header -->

    <div class="box-body">
        <div class="pull-left">
            {{form_widget(form.isFeatured, { 'attr': {class: 'flat-red',   } })}}  Is Featured
        </div>
        <div class=" pull-right">
            {{form_widget(form.enabled, { 'attr': {class: 'flat-red',   } })}}  Enabled
        </div>
    </div><!-- /.box-body -->
    <div class="box-footer">  
        <div class="pull-left">
            {{product is not defined  ? form_widget(form.saveAsDraft, { 'attr': {class: 'btn btn-default',   } })}}
            {{form_widget(form.preview, { 'attr': {class: 'btn btn-default',   } })}} 
        </div>
        <div class=" pull-right">
            {{product is defined and product.id > 0 ? form_widget(form.updateProduct, { 'attr': {class: 'btn btn-primary'} }) : 
         form_widget(form.publishProduct, { 'attr': {class: 'btn btn-primary'   } })}}   
        </div>
    </div>
</div><!-- /.box -->
