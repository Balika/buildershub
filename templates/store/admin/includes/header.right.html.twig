
<!-- Navbar Right Menu -->
<div class="navbar-custom-menu">
    <ul class="nav navbar-nav">
        <!-- Messages: style can be found in dropdown.less-->
        <li><a href="{{path('store_index')}}" title="Buy Contruction Equipment, Material & Accessories" target="new"><span class="fa fa-shopping-cart"></span> Store</a></li>                               
            {% if app.user !=null %}
                {{ render_esi(controller('App\\Controller\\Backend\\BackendNotificationController::renderTopNavNotifications', {'companyId':supplier.id} ), {"default":'Loading Cart....'}) }}                                                             
            <li class='user-block'>
                <a href='{{path('user_profile',{'usernameCanonical':app.user.usernameCanonical})}}'> 
                    {{app.user.fullName}}
                </a>
            </li>
            <li class="dropdown user user-menu">
                <!-- Menu Toggle Button -->
                <!-- The user image in the navbar-->
                <!-- hidden-xs hides the username on small devices so only the image appears. -->
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">                            
                    <span class="hidden-xs"><img src="{{app.user.person is not null and app.user.person.profilePicture is not null ? asset(app.user.person.profilePicture|imagine_filter('hub_thumbnail')) :  asset('cipron/dist/img/user1-128x128.jpg')}}" class="user-image" alt="User Image"><span class="caret"></span> </span>
                </a>
                <ul class="dropdown-menu">                                                
                    <!-- Menu Footer-->
                    <li class="user-footer">
                        <div class="pull-left">
                            <a href="{{path('account_settings', {'usernameCanonical':app.user.usernameCanonical, 'menu':'dashboard'} )}}" class="btn btn-default btn-flat">Account Settings</a>
                        </div>
                        <div class="pull-right">
                            <a href="{{path('security_logout')}}" class="btn btn-default btn-flat">Sign out</a>
                        </div>
