{% if category !=null %}
    {{form_start(form,{'method':'POST', 'action': path('single_product_category', {'slug':supplier.slug, 'category_slug':category.slug, 'action':'edit'}),  'attr': {id:'categoryForm' } })}}
{% else %}
    {{form_start(form,{'method': 'POST', 'attr': {id:'categoryForm' } })}}
{% endif %}
<div class="box-body">
    <div class="form-group">
        <label>Name</label>
        {{form_widget(form.name, { 'attr': {class: 'form-control',  placeholder: ' ', } })}}
    </div>
    <div class="form-group">
        <label>Slug</label>
        {{form_widget(form.slug, { 'attr': {class: 'form-control',  placeholder: ' ', } })}}
        <p class="help-block">The “slug” is the URL-friendly version of the name. It is usually all lowercase and contains only letters, numbers and hyphens</p>
    </div>
    <div class="form-group">
        <label>Parent</label>
        {{form_widget(form.parent, { 'attr': {class: 'form-control',  placeholder: ' ', } })}}
        <p class="help-block">The parent category of this entry</p>
    </div>
    <div class="form-group">
        <label>Category Image</label>
        {{ form_widget(form.imageFile,{ 'attr': {class: 'form-control'} }) }}
        {% if category is defined and category != null %}
            <p>
                <img src="{{asset('uploads/products/'~category.featureImage)}}" class="img-responsive thumbnail" style="width:200px; height: 180px"/>
            </p>
        {% endif %}
    </div>  
    <div class="form-group">
        <label>Description</label>
        {{ form_widget(form.description,{ 'attr': {class: 'form-control',  placeholder: ' ', rows:5} }) }}
    </div>   
    <div class="col-md-6 form-group">
        <label>Is Displayable? </label>
        
    </div> 
    <div class="col-md-6 form-group">
        <label>Is Store Item? </label>
        {{ form_widget(form.isStoreItem,{ 'attr': {class: 'flat-red'} }) }}
    </div> 
</div><!-- /.box-body -->

<div class="box-footer">
    <button type="submit" class="btn btn-primary pull-right">Add Category</button>
</div>
{{ form_row(form._token) }} 
{{ form_end(form, {'render_rest': false}) }}
