<div id="saleOptionsDlg" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" >
    <div class="modal-dialog" style="width:30%; ">        
        <div class="modal-content" style="overflow-y: scroll">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                <h4 class="modal-title" id="myModalLabel"> <span style="color: green"><strong>Advanced Sales options for {{product.name}}</strong></span></h4>
            </div>      
            {{form_start(optionsForm, {'method': 'POST', 'action': path('save_product_sales_options', {'slug':supplier.slug, 'product_slug':product.slug}), 'attr': {id:'saleOptionsForm' } } )}}
                <div class="modal-body" style="padding-bottom: 15px" id="response">               
                    <div class="form-group">
                        <label>Sale Volume</label>
                        {{form_widget(optionsForm.saleVolume, { 'attr': {class: 'form-control',  placeholder: ' ' } })}}
                    </div>
                    <div class="form-group">
                        <label>Dimensions / Size </label>
                        {{form_widget(optionsForm.dimension, { 'attr': {class: 'form-control' } })}}                    
                    </div>
                    <div class="form-group">
                        <label>Brand</label>
                        {{form_widget(optionsForm.brand, { 'attr': {class: 'form-control',  placeholder: ' ' } })}}
                    </div>
                    <div class="form-group">
                        <label>Sale Price</label>
                        {{form_widget(optionsForm.price, { 'attr': {class: 'form-control',  placeholder: ' ' } })}}
                    </div>
                    <div class="form-group">
                        <label>Unit</label>
                        {{form_widget(optionsForm.unit, { 'attr': {class: 'form-control',  placeholder: ' ' } })}}
                    </div>
                </div><!-- /.modal-content -->
                <div class="modal-footer">                
                    <button type="button" class="btn btn-danger btn-sm pull-left" data-dismiss="modal">Cancel</button>   
                    <button type="submit" class="btn btn-success btn-sm pull-righ" id="add-categories-btn">Save Options</button>
                </div>
                {{ form_row(optionsForm._token) }} 
                {{ form_end(optionsForm, {'render_rest': false}) }}
        </div><!-- /.modal-dialog -->
    </div>
</div>

