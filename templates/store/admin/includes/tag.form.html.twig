{{form_start(form,{'method': 'POST', 'attr': {id:'tagForm' } })}}
<div class="box-body">
    <div class="form-group">
        <label>Name</label>
        {{form_widget(form.name, { 'attr': {class: 'form-control',  placeholder: ' ', } })}}
    </div>
    <div class="form-group">
        <label>Slug</label>
        {{form_widget(form.slug, { 'attr': {class: 'form-control',  placeholder: ' ', } })}}
        <p class="help-block">The “slug” is the URL-friendly version of the name. It is usually all lowercase and contains only letters, numbers and hyphens</p>
    </div>
   
</div><!-- /.box-body -->

<div class="box-footer">
    <button type="submit" class="btn btn-primary pull-right">Add Tag</button>
</div>
{{ form_row(form._token) }} 
{{ form_end(form, {'render_rest': false}) }}
