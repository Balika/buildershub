<div class="row">
    <div class="smartforms-modal-body">
        <div class="smart-wrap">
            <div class="smart-forms smart-container transparent wrap-full">
                <div class="form-body no-padd"  style="padding-top:15px">
                    <div class="section col-md-12">
                        <label  class="control-label">Name of Award</label>
                        <label class="field prepend-icon">
                            {{ form_widget(form.name,{ 'attr': {class: 'gui-input',placeholder: 'e.g. Best employee of the year' } }) }}
                            <span class="field-icon"><i class="fa fa-pencil"></i></span>
                        </label>
                        <!--<div id="institutionResults" style="border: white solid 1px; background-color: white; color: black; border-radius: 4px; z-index:1; position: absolute; max-height: 250px; overflow: auto; width: 100%" class="row"></div> -->   
                    </div>
                    <div class="section col-md-6">
                        <label  class="control-label">Awarding Organisation</label>
                        <label class="field prepend-icon">
                            {{ form_widget(form.awardingOrganisation,{ 'attr': {class: 'gui-input', placeholder: 'e.g. Ghana Institution of Engineers' } }) }}
                            <span class="field-icon"><i class="fa fa-lock"></i></span>
                        </label>
                    </div>
                    <div class="section col-md-6">
                        <label  class="control-label">Place of Award</label>
                        <label class="field prepend-icon">
                            {{ form_widget(form.placeOfAward,{ 'attr': {class: 'gui-input', placeholder: 'e.g. Movenpick'  } }) }}
                            <span class="field-icon"><i class="fa fa-lock"></i></span>
                        </label>
                    </div>
                    <div class="section col-md-12">
                        <label  class="control-label">Award Date</label>
                        <label class="field prepend-icon">
                            {{ form_widget(form.awardDate,{ 'attr': {class: 'gui-input' } }) }}
                             <span class="field-icon"><i class="fa fa-calendar-o"></i></span> 
                        </label>
                    </div>
                    <div class="section col-md-6">
                        <label  class="control-label">Award Photo</label>
                        <label class="field prepend-icon file">
                            <span class="button btn-primary"> Choose File </span>
                            {{ form_widget(form.imageFile, {'attr':{class:"gui-file", onChange:"document.getElementById('uploader2').value = this.value;"} } ) }}       			
                            <input type="text" class="gui-input" id="uploader2" placeholder="no file selected" readonly>
                            <span class="field-icon"><i class="fa fa-upload"></i></span>
                        </label>                        
                    </div>
                    <div class="section col-md-6">
                        <label  class="control-label">Award Event Photos </label>
                        <label class="field prepend-icon file">                           
                            <span class="button"> Choose Files </span>
                            {{ form_widget(form.galleryFiles, {'attr':{class:"gui-file", onChange:"document.getElementById('uploader3').value = this.value;"} } ) }}       			
                            <input type="text" class="gui-input" id="uploader3" placeholder="no file selected" readonly>
                            <span class="field-icon"><i class="fa fa-upload"></i></span>
                        </label>
                        <!--<div id="degreeResults" style="border: white solid 1px; background-color: white; color: black; border-radius: 4px; z-index:1; position: absolute; max-height: 250px; overflow: auto; width: 100%" class="row"></div> -->      
                    </div> 
                    {{ form_row(form._token) }}
                </div>

                <div class="form-footer col-md-12">
                    <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                    <button class="btn btn-sm btn-success pull-right" type="submit" >Save Award</button>
                </div>
                {{ form_end(form, {'render_rest': false})}}
            </div>

        </div>
    </div>
</div>