{% block  content %}
    <section class="page-title-5" style="background: url('{{firm.coverPicture is not null ? asset(s3_images_url~firm.coverPicture) : asset("images/bg-img-13.jpg")}}') no-repeat center top" >
        <div class="container" id="coverPicturePanel">
            <div class="row">
                <div class="col-md-12" id="mapHolder">                    
                    <div id="map_extended" class="map">
                        <p>{{firm}} Google Map.</p>
                    </div> 
                    <a href="#" id="logo"> 
                        <img src="{{firm.logo is not null ? asset(s3_images_url~firm.logo) : asset('images/default-user.png')}}" alt="" class="imgbox-xlarge round img-boder">
                    </a>
                    <p id="companyName"><strong>{{firm}}</strong></p>
                </div>
                <!--end map-->
            </div>
        </div>
    </section>
    <section class="sec-padding">
        <div class="container">
            <div class="row no-gutter nopadding">
                <div class="col-md-2" id='profileLeftSidebar'>
                    <div class="padding-top-1 text-left" id="engage-stats" style="padding:8px">
                        <div class="icons-list-1 icon-tiny border-bottom">
                            <div class="icon icon-green icon-circle"><i class="fa fa-dashboard" aria-hidden="true"></i></div>
                            <div class="text"><a href="{{path('firm_profile',{'slug':firm.slug, 'page':'index'})}}" class="{{page=='index'?'active'}}"><strong>At a Glance</strong></a> </div>
                        </div>

                        <div class="icons-list-1 icon-tiny border-bottom">
                            <div class="icon icon-blue icon-circle"><i class="fa fa-briefcase" aria-hidden="true"></i></div>
                            <div class="text"><a href="{{path('firm_profile',{'slug':firm.slug, 'page':'works'})}}" class="{{page=='works'?'active'}}"><strong>Projects Portfolio</strong></a> </div>
                        </div>   
                        <div class="icons-list-1 icon-tiny border-bottom">
                            <div class="icon icon-dark icon-circle"><i class="fa fa-pencil" aria-hidden="true"></i></div>
                            <div class="text"><a href="{{path('firm_profile',{'slug':firm.slug, 'page':'posts'})}}" class="{{page=='posts'?'active'}}"><strong>Posts</strong></a> </div>
                        </div>                         
                        <div class="icons-list-1 icon-tiny border-bottom">
                            <div class="icon icon-red icon-circle"><i class="fa fa-users" aria-hidden="true"></i></div>
