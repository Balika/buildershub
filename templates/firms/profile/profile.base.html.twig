        $("#profileLeftSidebar, #profileRightSidebar").stick_in_parent();
        $("#work_startDate").datepicker({
            defaultDate: "+1w",
            changeMonth: false,
            numberOfMonths: 1,
            dateFormat: "yy-mm-dd",
            prevText: '<i class="fa fa-chevron-left"></i>',
            nextText: '<i class="fa fa-chevron-right"></i>',
            onClose: function (selectedDate) {
                $("#app_work_completionDate").datepicker("option", "minDate", selectedDate);
            }
        });
        $("#work_completionDate").datepicker({   
            defaultDate: "+1w",
            changeMonth: false,
            numberOfMonths: 1,
