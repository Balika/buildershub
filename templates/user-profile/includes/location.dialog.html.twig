<div id="locationDlg" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" >
    <div class="modal-dialog">        
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                <h3 class="modal-title" id="myModalLabel"> <span style="color: green"><strong>Update Your Location</strong></span></h3>
            </div>  
            <div class="smartforms-modal-body" >
                <div class="smart-wrap">
                    <div class="smart-forms smart-container transparent wrap-full">
                        <div class="row"  style="padding:15px">
                            <div class="col-md-12">
                                <div class=" form-body no-padd">
                                    {{ form_start(locationFilterForm, {'method': 'post', 'action' : path('update_profile_location'),  'attr': {'class': 'locationForm form-horizontal', 'id':'locationForm'} }) }}

                                    <div class="section">
                                        <label class="select-box-2 prepend-icon">    
                                            {{ form_widget(locationFilterForm.countryCode,{ 'attr': {class: 'form-control'} }) }}
                                            <span class="field-icon"><i class="fa fa-flag"></i></span>
                                        </label>
                                    </div>
                                    <div class="section">
                                        <label class="select-box-2 prepend-icon">          
                                            {{ form_widget(locationFilterForm.region,{ 'attr': {placeholder: 'Select your region'} }) }}
                                            <span class="field-icon"><i class="fa fa-map-marker"></i></span>
                                        </label>
                                    </div>
                                    <div class="section">
                                        <label class="select-box-2 prepend-icon">          
                                            {{ form_widget(locationFilterForm.town,{ 'attr': {placeholder: 'Select your town'} }) }}
                                            <span class="field-icon"><i class="fa fa-map-marker"></i></span>
                                        </label>
                                    </div>
                                    <div class="section">
                                        <label class="field prepend-icon">
                                            {{ form_widget(locationFilterForm.subLocation,{ 'attr': {class: 'form-control', placeholder:'Type specific location'} }) }}                           
                                            <span class="field-icon"><i class="fa fa-map-marker"></i></span>
                                        </label>        
                                    </div>
                                </div>
                                <div class="form-footer">
                                    <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                                    <button type="submit" class="btn btn-success pull-right">Update Location</button>
                                </div>
                                {{ form_row(locationFilterForm._token) }} 
                                {{ form_end(locationFilterForm, {'render_rest': false}) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

