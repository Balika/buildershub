{% include 'user-profile/includes/project.photo.form.html.twig' %}
<p align="right">
    <a class="btn btn-tiny border border-cyan xround-1" href="{{path('user_profile', {'usernameCanonical':user.usernameCanonical, 'page':'projects', 'sub':'add-project'})}}"><span class="fa fa-plus"> Add Project</span></a>
</p>


<section class="sec-padding" id="asynPageContent">
    {% if projects is defined %}

        {% for project in projects %}
            <div class="ce4-feature-box-3 margin-bottom box-shadow-1 hover-shadow-1">
