                    <h5 >
                        {{ project.title|title}} <a class="btn btn-tiny btn-success round-1 projectPhotoLink pull-right"  id="Add a photo to {{project.title}}" href="{{path('add_project_photo',{'id':project.id})}}"><span class="fa fa-plus"> Add Project Photo</span></a>
                    </h5>
                    <section class="sec-padding">
                        <div class="row">
                            <h6><small><strong>Project Photo Gallery</strong></small></h6>                                            
                            {{ render_esi(controller('App\\Controller\\ProfileUtilityController:renderProjectPhotos', {'work':project.id, 'block':'myProjectPhotoGallery'}), {"default":'Loading Cart....'}) }}                                           
                        </div>
                    </section>
                </div>
            </div>
