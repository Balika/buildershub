{% extends "shared/page.base.html.twig" %}
{% block  content %}
    <section class="sec-padding" style="background: url('{{asset("images/sliders/slide-2.png")}}')">
        <div class="container">
            <div class="row">
                <div class="clearfix"></div>
                <br/><br/>
                <div class="modal-dialog" >
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
                            <h4 class="modal-title" id="myModalLabel">
                                BuildersHub Password Reset <span class="small pull-right"> OR <a href="{{path('security_login_form')}}">Login Here</a></span>
                            </h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                            <div class="col-xs-12">
                                {% if  message is defined %}
                                    <div class="alert alert-success">                                       
                                        {{ message }}                                       
                                    </div>
                                    <p align="right">
                                        <a class="btn btn-success" href="{{path('security_login_form')}}">Login with new password</a>
                                    </p>
                                {% elseif error is defined %}  
                                    <div class="alert alert-warning">                                       
                                        {{ error }}                                       
                                    </div>
                                    <p align="right">
                                        <a class="btn btn-success" href="{{path('security_login_form')}}">Login</a>
                                    </p>
                                {% else %}    
                                    
                                    {{ form_start(form) }}
                                    <div class="col-md-12">
                                        <p align="center">Enter the New Password </p>
                                    </div>                                                                
                                    <div class="form-group col-md-12">                               
                                        <span style="color: red">{{ form_errors(form.password.first) }}</span>
                                        {{ form_widget(form.password.first, { 'attr': {class: 'form-control', type: 'password', placeholder: 'Enter new password', minlength :'6'} }) }}
                                    </div>
                                    <div class="form-group col-md-12">                               
                                        {{ form_errors(form.password.second) }}
                                        {{ form_widget(form.password.second, { 'attr': {class: 'form-control', type: 'password', placeholder: 'Repeat password', minlength :'6'} }) }}
                                    </div>
                                    <hr/>                                   
                                    <div class="form-group pull-right">
                                        <a  class="btn h5a-btn btn-success" href="{{path('home')}}"> Cancel</a>
                                        <button type="submit" class="btn h5a-btn btn-default" ><i class="fa fa-user"></i> Reset Password</button>
                                    </div>
                                    {{ form_row(form._token) }} 
                                    {{ form_end(form, {'render_rest': false}) }}  
                                    <p align="center" style="color:white">.</p>
                                {% endif %}
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}